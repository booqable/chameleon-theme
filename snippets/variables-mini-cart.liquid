{% style %}
  [data-tid="Mini cart"] {
    --minicart-warning-color: var(--color-red);
    --minicart-warning-background-color: var(--color-red-light);
    --minicart-border-radius: var(--border-radius-rounded);
    --minicart-padding: 16px;
    --minicart-image-width: 56px;
    --minicart-z-index: 9999;
    --minicart-font: var(--font-body, Source Sans Pro, sans-serif);
    --minicart-font-size: 14px;
    --minicart-font-weight-normal: var(--font-weight-regular);
    --minicart-font-weight-bold: var(--font-weight-semibold);

    {% if color_palette == "one" %}
      {% if settings.accent_background != blank %}
        --minicart-accent-color: var(--background-accent);
      {% else %}
        --minicart-accent-color: #F4B841;
      {% endif %}

      {% if settings.accent_color != blank %}
        --minicart-header-color: var(--color-accent);
      {% else %}
        --minicart-header-color: #0B1A26;
      {% endif %}

      {% if settings.background != blank %}
        --minicart-background-color: var(--background-primary);
      {% else %}
        --minicart-background-color: #FFFFFF;
      {% endif %}

      {% if settings.primary_color != blank %}
        --minicart-typo-color: var(--color-primary);
        --minicart-border-color: var(--color-border);
      {% else %}
        --minicart-typo-color: #0B1A26;
        --minicart-border-color: #0B1A2626;
      {% endif %}

    {% elsif color_palette == "two" %}
      {% if settings.accent_background_2 != blank %}
        --minicart-accent-color: var(--background-accent-2);
      {% else %}
        --minicart-accent-color: #F4B841;
      {% endif %}

      {% if settings.accent_color_2 != blank %}
        --minicart-header-color: var(--color-accent-2);
      {% else %}
        --minicart-header-color: #0B1A26;
      {% endif %}

      {% if settings.background_2 != blank %}
        --minicart-background-color: var(--background-primary-2);
      {% else %}
        --minicart-background-color: #0B1A26;
      {% endif %}

      {% if settings.primary_color_2 != blank %}
        --minicart-typo-color: var(--color-primary-2);
        --minicart-border-color: var(--color-border-2);
      {% else %}
        --minicart-typo-color: #FFFFFF;
        --minicart-border-color: #FFFFFF47;
      {% endif %}

    {% elsif color_palette == "three" %}
      {% if settings.accent_background_3 != blank %}
        --minicart-accent-color: var(--background-accent-3);
      {% else %}
        --minicart-accent-color: #0B1A26;
      {% endif %}

      {% if settings.accent_color_3 != blank %}
        --minicart-header-color: var(--color-accent-3);
      {% else %}
        --minicart-header-color: #FFFFFF;
      {% endif %}

      {% if settings.background_3 != blank %}
        --minicart-background-color: var(--background-primary-3);
      {% else %}
        --minicart-background-color: #F4B841;
      {% endif %}

      {% if settings.primary_color_3 != blank %}
        --minicart-typo-color: var(--color-primary-3);
        --minicart-border-color: var(--color-border-3);
      {% else %}
        --minicart-typo-color: #0B1A26;
        --minicart-border-color: #0B1A2626;
      {% endif %}
    {%- endif -%}
  }
{% endstyle %}
