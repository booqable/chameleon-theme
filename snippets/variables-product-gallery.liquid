{%- capture product_gallery -%}
  --product-gallery-control-size: 40px;
  --product-gallery-control-padding: 0 5px;
  --product-gallery-control-border-radius: 0;
  --product-gallery-control-icon-size: 16px;
  --product-gallery-control-filter: blur(2px);
  --product-gallery-direction: column;
  --product-gallery-gap: 16px;
  --product-gallery-preview-gap: 16px;
  --product-gallery-preview-border-radius: 0;
  --product-gallery-thumbnail-direction: row;
  --product-gallery-thumbnail-border-radius: 0;
  --product-gallery-thumbnail-size: 80px;

  {%- if color_palette == "one" -%}
    {%- if settings.primary_color != blank -%}
      --product-gallery-preview-border: 1px solid {{ settings.primary_color | append: "26" }};
      --product-gallery-thumbnail-border: 1px solid {{ settings.primary_color | append: "26" }};
    {%- endif -%}

    {%- if settings.accent_background != blank -%}
      --product-gallery-control-background-color: {{ settings.accent_background }};
      --product-gallery-active-thumbnail-border: 1px solid {{ settings.accent_background }};
    {%- else -%}
      --product-gallery-control-background-color: {{ branding_color }};
      --product-gallery-active-thumbnail-border: 1px solid {{ branding_color }};
    {%- endif -%}

    {%- if settings.accent_color != blank -%}
      --product-gallery-control-icon-color: {{- settings.accent_color -}};
    {%- else -%}
      --product-gallery-control-icon-color: {%- if settings.primary_color != blank -%}{{- settings.primary_color -}}{%- endif -%};
    {%- endif -%}

  {%- elsif color_palette == "two" -%}
    {%- if settings.primary_color_2 != blank -%}
      --product-gallery-preview-border: 1px solid {{ settings.primary_color_2 | append: "47" }};
      --product-gallery-thumbnail-border: 1px solid {{ settings.primary_color_2 | append: "47" }};
    {%- endif -%}

    {%- if settings.accent_background_2 != blank -%}
      --product-gallery-control-background-color: {{ settings.accent_background_2 }};
      --product-gallery-active-thumbnail-border: 1px solid {{ settings.accent_background_2 }};
    {%- else -%}
      --product-gallery-control-background-color: {{ branding_color }};
      --product-gallery-active-thumbnail-border: 1px solid {{ branding_color }};
    {%- endif -%}

    {%- if settings.accent_color_2 != blank -%}
      --product-gallery-control-icon-color: {{- settings.accent_color_2 -}};
    {%- else -%}
      --product-gallery-control-icon-color: {%- if settings.primary_color_2 != blank -%}{{- settings.primary_color_2 -}}{%- endif -%};
    {%- endif -%}
  {%- endif -%}
{%- endcapture -%}
