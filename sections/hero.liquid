{{ "hero.css" | asset_url | stylesheet_tag }}

{%- assign custom_title          = section.settings.custom_title -%}
{%- assign custom_description    = section.settings.custom_description -%}
{%- assign show_bg               = section.settings.show_bg -%}
{%- assign show_datepicker       = section.settings.show_datepicker -%}
{%- assign image                 = section.settings.image -%}
{%- assign color_palette         = section.settings.color_palette -%}
{%- assign padding_top           = section.settings.padding_top -%}
{%- assign padding_bottom        = section.settings.padding_bottom -%}
{%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
{%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}

{%- if show_datepicker -%}
  {{ "date-picker.css" | asset_url | stylesheet_tag }}
{%- endif -%}

{% comment %} CSS variables start {% endcomment %}
{%- capture variables -%}
  {%- case padding_top -%}
    {%- when 'small' -%}
      --padding-top: 50px;
    {%- when 'medium' -%}
      --padding-top: 85px;
    {%- when 'large' -%}
      --padding-top: 112px;
  {%- endcase -%}

  {%- case padding_bottom -%}
    {%- when 'small' -%}
      --padding-bottom: 50px;
    {%- when 'medium' -%}
      --padding-bottom: 85px;
    {%- when 'large' -%}
      --padding-bottom: 112px;
  {%- endcase -%}

  {%- case padding_top_mobile -%}
    {%- when 'small' -%}
      --padding-top-mobile: 40px;
    {%- when 'medium' -%}
      --padding-top-mobile: 57px;
    {%- when 'large' -%}
      --padding-top-mobile: 75px;
  {%- endcase -%}

  {%- case padding_bottom_mobile -%}
    {%- when 'small' -%}
      --padding-bottom-mobile: 40px;
    {%- when 'medium' -%}
      --padding-bottom-mobile: 57px;
    {%- when 'large' -%}
      --padding-bottom-mobile: 75px;
  {%- endcase -%}
{%- endcapture -%}
{% comment %} CSS variables end {% endcomment %}

<div class="hero__wrapper{% if color_palette != blank %} palette-{{ color_palette }}{%- endif -%}" style="{{- variables | escape -}}">
  <div class="hero__container container{% if padding_top != blank or padding_top_mobile != blank %} hero__container--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} hero__container--padding-bottom{%- endif -%}">
    <div class="hero__content">
      {%- if custom_title != blank -%}
        <h1 class="hero__title">{{- custom_title -}}</h1>
      {%- else -%}
        <h1 class="hero__title">{{- page_title -}}</h1>
      {%- endif -%}

      {%- if custom_description != blank -%}
        <div class="hero__description text-medium">{{- custom_description -}}</div>
      {%- else -%}
        {%- if page_description != blank -%}
          <div class="hero__description text-medium">{{- page_description -}}</div>
        {%- endif -%}
      {%- endif -%}
    </div>
  </div>

  {%- if show_datepicker -%}
    <div class="hero__container hero__container--bottom">
      <div class="hero__container container">
        <bq-date-picker data-primary-color="{{ settings.accent_background }}"></bq-date-picker>
      </div>
      <div class="hero__overlay"></div>
    </div>
  {%- endif -%}

  <div class="hero__vision">
    {%- if show_bg -%}
      <div class="hero__vision-wrapper">
        {%- if image != blank -%}
          {%- render 'image',
            image: image,
            loading: 'lazy',
            class: 'hero__image',
            size: 'xxl'
          -%}
        {%- else -%}
          {%- render 'image-background-web' -%}
        {%- endif -%}
          <div class="hero__vision-wrapper-overlay container"></div>
      </div>
    {%- endif -%}
  </div>
</div>

<script>
  const setColor = () => {
    const section = document.querySelector('.hero').nextElementSibling;

    if (!section) return false;

    const target = document.querySelector('.hero__overlay'),
          children = [...section.children];

    children.forEach(child => {
      if (child.classList.contains('palette-one')) {
        target.classList.add('palette-one')
      } else if (child.classList.contains('palette-two')) {
        target.classList.add('palette-two')
      }
    })
  }

  setTimeout(setColor, 250);

</script>

