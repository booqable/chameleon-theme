        "default": "one"
      },
      {
        "type": "header",
        "content": "Collection (optional)"
      },
      {
        "type": "paragraph",
        "content": "When you select a collection, any product blocks will be ignored"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "header",
        "content": "Carousel settings"
      },
      {
        "type": "checkbox",
