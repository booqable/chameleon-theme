{{ "hero.css" | asset_url | stylesheet_tag }}

{%- assign show_bg               = section.settings.show_bg -%}
{%- assign show_datepicker       = section.settings.show_datepicker -%}
{%- assign image                 = section.settings.image -%}
{%- assign color_palette         = section.settings.color_palette -%}
{%- assign padding_top           = section.settings.padding_top -%}
{%- assign padding_bottom        = section.settings.padding_bottom -%}
{%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
{%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}

{%- if show_datepicker -%}
  {{ "date-picker.css" | asset_url | stylesheet_tag }}
{%- endif -%}

{% comment %} CSS variables start {% endcomment %}
{%- capture variables -%}
  {%- case padding_top -%}
    {%- when 'none' -%}
      --padding-top: 0;
    {%- when 'small' -%}
      --padding-top: 16px;
    {%- when 'medium' -%}
      --padding-top: 24px;
    {%- when 'large' -%}
      --padding-top: 48px;
  {%- endcase -%}

  {%- case padding_bottom -%}
    {%- when 'none' -%}
      --padding-bottom: 0;
    {%- when 'small' -%}
      --padding-bottom: 16px;
    {%- when 'medium' -%}
      --padding-bottom: 24px;
    {%- when 'large' -%}
      --padding-bottom: 48px;
  {%- endcase -%}

  {%- case padding_top_mobile -%}
    {%- when 'none' -%}
      --padding-top-mobile: 0;
    {%- when 'small' -%}
      --padding-top-mobile: 16px;
    {%- when 'medium' -%}
      --padding-top-mobile: 24px;
    {%- when 'large' -%}
      --padding-top-mobile: 48px;
  {%- endcase -%}

  {%- case padding_bottom_mobile -%}
    {%- when 'none' -%}
      --padding-bottom-mobile: 0;
    {%- when 'small' -%}
      --padding-bottom-mobile: 16px;
    {%- when 'medium' -%}
      --padding-bottom-mobile: 24px;
    {%- when 'large' -%}
      --padding-bottom-mobile: 48px;
  {%- endcase -%}
{%- endcapture -%}
{% comment %} CSS variables end {% endcomment %}

<div class="hero__wrapper{% if color_palette != blank %} palette-{{ color_palette }}{%- endif -%}" style="{{- variables | escape -}}">
  {%- if show_datepicker -%}
    <div class="hero__container hero__container--bottom{% if padding_top != blank or padding_top_mobile != blank %} hero__container--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} hero__container--padding-bottom{%- endif -%}">
      <div class="hero__container container">
        <bq-date-picker data-primary-color="{{ settings.accent_background }}"></bq-date-picker>
      </div>
      <div class="hero__overlay"></div>
    </div>
  {%- endif -%}

  <div class="hero__vision">
    {%- if show_bg -%}
      <div class="hero__vision-wrapper">
        {%- if image != blank -%}
          {%- render 'image',
            image: image,
            loading: 'lazy',
            class: 'hero__image',
            size: 'xxl'
          -%}
        {%- else -%}
          {%- render 'image-background-web' -%}
        {%- endif -%}
          <div class="hero__vision-wrapper-overlay container"></div>
      </div>
    {%- endif -%}
  </div>
</div>

<script>
  const setColor = () => {
    const section = document.querySelector('.hero').nextElementSibling,
          body = document.querySelector('body'),
          target = document.querySelector('.hero__overlay');

    if (section) {
      const children = [...section.children],
            first = 'palette-one',
            second = 'palette-two';

      children.forEach(child => {
        const isFirst = child.classList.contains(first),
              isSecond = child.classList.contains(second);

        return isFirst ? target.classList.add(first)
             : isSecond ? target.classList.add(second)
             : false;
      })
    } else {
      const res = getComputedStyle(body).backgroundColor;

      target.style.setProperty('background-color',`${res}`);
    }
  }

  setTimeout(setColor, 300);

</script>

