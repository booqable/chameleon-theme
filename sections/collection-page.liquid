{{ "collection-page.css" | asset_url | stylesheet_tag }}
{{ "product-card.css" | asset_url | stylesheet_tag }}

{%- assign grid                  = section.settings.grid -%}
{%- assign message               = section.settings.message -%}
{%- assign show_excerpt          = section.settings.show_excerpt -%}
{%- assign limit                 = section.settings.limit -%}
{%- assign padding_top           = section.settings.padding_top -%}
{%- assign padding_bottom        = section.settings.padding_bottom -%}
{%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
{%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}
{%- assign image_placeholder 	   = settings.image_placeholder -%}
{%- assign is_focal              = settings.use_focal_images -%}

{% comment %} CSS variables start {% endcomment %}
{%- capture variables -%}
  {%- case padding_top -%}
    {%- when 'small' -%}
      --padding-top: 24px;
    {%- when 'medium' -%}
      --padding-top: 50px;
    {%- when 'large' -%}
      --padding-top: 90px;
  {%- endcase -%}

  {%- case padding_bottom -%}
    {%- when 'small' -%}
      --padding-bottom: 24px;
    {%- when 'medium' -%}
      --padding-bottom: 50px;
    {%- when 'large' -%}
      --padding-bottom: 90px;
  {%- endcase -%}

  {%- case padding_top_mobile -%}
    {%- when 'small' -%}
      --padding-top-mobile: 24px;
    {%- when 'medium' -%}
      --padding-top-mobile: 50px;
    {%- when 'large' -%}
      --padding-top-mobile: 90px;
  {%- endcase -%}

  {%- case padding_bottom_mobile -%}
    {%- when 'small' -%}
      --padding-bottom-mobile: 24px;
    {%- when 'medium' -%}
      --padding-bottom-mobile: 50px;
    {%- when 'large' -%}
      --padding-bottom-mobile: 90px;
  {%- endcase -%}

  {%- case grid -%}
    {%- when 'two' -%}
      --grid-element: 2;
    {%- when 'three' -%}
      --grid-element: 3;
  {%- endcase -%}
{%- endcapture -%}
{% comment %} CSS variables end {% endcomment %}

<div class="collection-page__wrapper{% if padding_top != blank or padding_top_mobile != blank %} collection-page__wrapper--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} collection-page__wrapper--padding-bottom{%- endif -%}" style="{{- variables | escape -}}">
  <div class="collection-page__container container">
    {% if collection.products_count > 0 %}
      {% assign products = collection.products %}

      {% paginate products by limit %}
        <div class="collection-page__products">
          {% for product in products %}
            {%- render 'product-card',
                product: product,
                placeholder: image_placeholder,
                focal: is_focal,
                show_excerpt: show_excerpt
            -%}
          {% endfor %}
        </div>

        {% if paginate.pages > 1 %}
          <div class="collection-page__pagination">
            {%- include "pagination" -%}
          </div>
        {% endif %}
      {% endpaginate %}

    {% else %}
      <p>{{- message -}}</p>
    {% endif %}
  </div>
</div>

{% schema %}
