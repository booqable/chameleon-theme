    "name": "Product list",
    "tag": "section",
    "class": "collection-page",
    "templates": ["collection"],
    "settings": [
      {
        "type": "header",
        "content": "General settings"
      },
      {
        "type": "number",
        "id": "limit",
        "label": "Product limit for pagination",
        "min": 6,
        "max": 24,
        "default": 6,
        "info": "Note: Use positive numbers only. Min number is 6, max number is 24"
      },
      {
        "type": "checkbox",
        "id": "show_excerpt",
        "default": true,
        "label": "Show description of product"
      },
      {
        "type": "text",
        "id": "message",
        "label": "Message for empty collection",
