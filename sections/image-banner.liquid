{%- assign blocks = section.blocks -%}

{%- if blocks.size > 0 -%}
  <link rel="preload" href="{{ 'image-banner.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">

  {%- assign limit                 = section.settings.limit -%}
  {%- assign show_navigation       = section.settings.show_navigation -%}
  {%- assign show_pagination       = section.settings.show_pagination -%}
  {%- assign show_counter          = section.settings.show_counter -%}
  {%- assign padding_top           = section.settings.padding_top -%}
  {%- assign padding_bottom        = section.settings.padding_bottom -%}
  {%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
  {%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}
  {%- assign ui_color              = section.settings.ui_color -%}
  {%- assign timer                 = section.settings.timer -%}
  {%- assign pause                 = section.settings.pause -%}
  {%- assign effect                = section.settings.effect -%}

  {%- assign carousel = false -%}

  {%- if blocks.size > 1 -%}
    <link rel="preload" href="{{ 'carousel.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">

    {%- assign carousel = true -%}
  {%- endif -%}

  {% comment %} CSS variables start {% endcomment %}
  {%- capture variables -%}
    {%- if padding_top != blank -%}
      --padding-top: {{ padding_top }}px;
    {%- endif -%}
    {%- if padding_bottom != blank -%}
      --padding-bottom: {{ padding_bottom }}px;
    {%- endif -%}
    {%- if padding_top_mobile != blank -%}
      --padding-top-mobile: {{ padding_top_mobile }}px;
    {%- endif -%}
    {%- if padding_bottom_mobile != blank -%}
      --padding-bottom-mobile: {{ padding_bottom_mobile }}px;
    {%- endif -%}
    {%- if ui_color != blank -%}
      --ui-color: {{ ui_color }};
    {%- endif -%}
    {%- if carousel -%}
      --slide-width: 100%;
      --slide-width-mobile: 100%;
    {%- endif -%}
  {%- endcapture -%}
  {% comment %} CSS variables end {% endcomment %}

  <div class="image-banner__wrapper" style="{{- variables | escape -}}">
    {%- if carousel -%}
      <div class="carousel carousel__fluid carousel__{{- effect -}}-effect{% if pause %} carousel__pause{%- endif -%}" aria-label="Gallery">
        <input class="carousel__timer" type="hidden" name="hidden" value="{{- timer -}}">
        <div class="carousel__wrapper">
    {%- endif -%}

          {%- for block in blocks limit: limit -%}
            {%- assign first                = forloop.first -%}
            {%- assign title                = block.settings.title -%}
            {%- assign description          = block.settings.description -%}
            {%- assign button_1             = block.settings.button_1 -%}
            {%- assign button_url_1         = block.settings.button_url_1 -%}
            {%- assign button_2             = block.settings.button_2 -%}
            {%- assign button_url_2         = block.settings.button_url_2 -%}
            {%- assign text_position        = block.settings.text_position -%}
            {%- assign text_position_mobile = block.settings.text_position_mobile -%}
            {%- assign video_url            = block.settings.video_url | strip -%}
            {%- assign image                = block.settings.image -%}
            {%- assign image_mobile         = block.settings.image_mobile -%}
            {%- assign background           = block.settings.background -%}
            {%- assign color                = block.settings.color -%}
            {%- assign title_color          = block.settings.title_color -%}
            {%- assign show_overlay         = block.settings.show_overlay -%}
            {%- assign overlay_opacity      = block.settings.overlay_opacity -%}

            {% comment %} CSS variables start {% endcomment %}
            {%- capture text_variables -%}
              {%- if color != blank -%}
                --color-third-foreground: {{ color }};
              {%- endif -%}
              {%- if title_color != blank -%}
                --title-color: {{ title_color }};
              {%- endif -%}

              {%- case text_position -%}
                {%- when 'top-left' -%}
                  --text-justify-content: flex-start;
                  --text-align-items: flex-start;
                  --text-align: left;
                  --text-width: 400px;
                  --margin-left: 0;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 37px;
                {%- when 'top-center' -%}
                  --text-justify-content: center;
                  --text-align-items: flex-start;
                  --text-align: center;
                  --text-width: none;
                  --margin-left: auto;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 0;
                {%- when 'top-right' -%}
                  --text-justify-content: flex-end;
                  --text-align-items: flex-start;
                  --text-align: right;
                  --text-width: 400px;
                  --margin-left: auto;
                  --margin-right: 0;
                  --padding-left: 37px;
                  --padding-right: 0;
                {%- when 'middle-left' -%}
                  --text-justify-content: flex-start;
                  --text-align-items: center;
                  --text-align: left;
                  --text-width: 400px;
                  --margin-left: 0;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 37px;
                {%- when 'center' -%}
                  --text-justify-content: center;
                  --text-align-items: center;
                  --text-align: center;
                  --text-width: none;
                  --margin-left: auto;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 0;
                {%- when 'middle-right' -%}
                  --text-justify-content: flex-end;
                  --text-align-items: center;
                  --text-align: right;
                  --text-width: 400px;
                  --margin-left: auto;
                  --margin-right: 0;
                  --padding-left: 37px;
                  --padding-right: 0;
                {%- when 'bottom-left' -%}
                  --text-justify-content: flex-start;
                  --text-align-items: flex-end;
                  --text-align: left;
                  --text-width: 400px;
                  --margin-left: 0;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 37px;
                {%- when 'bottom-center' -%}
                  --text-justify-content: center;
                  --text-align-items: flex-end;
                  --text-align: center;
                  --text-width: none;
                  --margin-left: auto;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 0;
                {%- when 'bottom-right' -%}
                  --text-justify-content: flex-end;
                  --text-align-items: flex-end;
                  --text-align: right;
                  --text-width: 400px;
                  --margin-left: auto;
                  --margin-right: 0;
                  --padding-left: 37px;
                  --padding-right: 0;
              {%- endcase -%}

              {%- case text_position_mobile -%}
                {%- when 'top-left' -%}
                  --text-justify-content-mobile: flex-start;
                  --text-align-items-mobile: flex-start;
                  --text-align-mobile: left;
                  --text-width-mobile: 400px;
                  --margin-left-mobile: 0;
                  --margin-right-mobile: auto;
                {%- when 'top-center' -%}
                  --text-justify-content-mobile: center;
                  --text-align-items-mobile: flex-start;
                  --text-align-mobile: center;
                  --text-width-mobile: none;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: auto;
                {%- when 'top-right' -%}
                  --text-justify-content-mobile: flex-end;
                  --text-align-items-mobile: flex-start;
                  --text-align-mobile: right;
                  --text-width-mobile: 400px;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: 0;
                {%- when 'middle-left' -%}
                  --text-justify-content-mobile: flex-start;
                  --text-align-items-mobile: center;
                  --text-align-mobile: left;
                  --text-width-mobile: 400px;
                  --margin-left-mobile: 0;
                  --margin-right-mobile: auto;
                {%- when 'center' -%}
                  --text-justify-content-mobile: center;
                  --text-align-items-mobile: center;
                  --text-align-mobile: center;
                  --text-width-mobile: none;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: auto;
                {%- when 'middle-right' -%}
                  --text-justify-content-mobile: flex-end;
                  --text-align-items-mobile: center;
                  --text-align-mobile: right;
                  --text-width-mobile: 400px;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: 0;
                {%- when 'bottom-left' -%}
                  --text-justify-content-mobile: flex-start;
                  --text-align-items-mobile: flex-end;
                  --text-align-mobile: left;
                  --text-width-mobile: 400px;
                  --margin-left-mobile: 0;
                  --margin-right-mobile: auto;
                {%- when 'bottom-center' -%}
                  --text-justify-content-mobile: center;
                  --text-align-items-mobile: flex-end;
                  --text-align-mobile: center;
                  --text-width-mobile: none;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: auto;
                {%- when 'bottom-right' -%}
                  --text-justify-content-mobile: flex-end;
                  --text-align-items-mobile: flex-end;
                  --text-align-mobile: right;
                  --text-width-mobile: 400px;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: 0;
              {%- endcase -%}
            {%- endcapture -%}

            {%- capture image_variables -%}
              {%- if background != blank -%}
                --color-primary-foreground: {{ background }};
                --color-primary-foreground-rgb: {{ background }}00;
                --color-primary-foreground-rgb-half: {{ background }}73;
              {%- endif -%}
              {%- if overlay_opacity != blank -%}
                --opacity-overlay: {{ overlay_opacity }}%;
              {%- endif -%}
            {%- endcapture -%}
            {% comment %} CSS variables end {% endcomment %}

            {%- if carousel -%}
              <div class="carousel__item{% if effect == 'fade' and first == false %} hide{% endif %}{% if effect == 'fade' and first %} show{%- endif -%}">
                <div class="carousel__inner">
            {%- endif -%}
                  <div
                    class="image-banner__container container{% if padding_top != blank or padding_top_mobile != blank %} image-banner__container--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} image-banner__container--padding-bottom{%- endif -%}"
                    style="{{- text_variables | escape -}}"
                  >
                    <div class="image-banner__text-area">
                      <div class="image-banner__content">
                        {%- if title != blank -%}
                          <h1 class="image-banner__title">{{- title -}}</h1>
                        {%- endif -%}

                        {%- if description != blank -%}
                          <div class="image-banner__description text-medium">{{- description | truncate: 150, " ..." -}}</div>
                        {%- endif -%}

                        {%- if button_1 != blank and button_url_1 != blank or button_2 != blank and button_url_2 != blank -%}
                          <div class="image-banner__buttons">
                            {%- if button_1 != blank and button_url_1 != blank -%}
                              <a href="{{  button_url_1 }}" class="image-banner__button button button--primary button--large">{{- button_1 -}}</a>
                            {%- endif -%}

                            {%- if button_2 != blank and button_url_2 != blank -%}
                              <a href="{{  button_url_2 }}" class="image-banner__button button button--outlined button--large">{{- button_2 -}}</a>
                            {%- endif -%}
                          </div>
                        {%- endif -%}

                      </div>
                    </div>
                  </div>

                  <div class="image-banner__vision" style="{{- image_variables | escape -}}">
                    {%- if video_url contains "youtube.com" -%}
                      {%- assign video_drop = video_url | split: "?v=" -%}
                      {%- assign video_id   = video_drop | last | strip -%}

                      <div class="image-banner__vision-wrapper{%  if show_overlay %} image-banner__vision-wrapper--overlay{%- endif -%}">
                        <input id="video-{{- block.id -}}" value="{{- video_id -}}" class="image-banner__video-id" type="hidden" name="hidden">
                        <div id="player-{{- block.id -}}" class="image-banner__video"></div>
                      </div>

                    {%- elsif video_url contains "vimeo.com" -%}
                      {%- assign video_drop = video_url | split: "/" -%}
                      {%- assign video_id   = video_drop | last | strip -%}

                      <div class="image-banner__vision-wrapper{%if show_overlay %} image-banner__vision-wrapper--overlay{%- endif -%}">
                        <iframe
                          class="image-banner__video"
                          src="https://player.vimeo.com/video/{{- video_id -}}?autoplay=1&muted=1&loop=1&autopause=0&controls=0&background=1"
                          width="988"
                          height="556"
                          frameborder="0"
                          allow="autoplay; fullscreen"
                          allowfullscreen
                          autoplay
                          muted
                          loop
                        ></iframe>
                      </div>

                    {%- elsif image != blank or image_mobile != blank -%}
                      {%- if image != blank -%}
                        <div class="image-banner__vision-wrapper{% if image_mobile != blank %} image-banner__vision-wrapper--desktop{% endif %}{%if show_overlay %} image-banner__vision-wrapper--overlay{%- endif -%}">
                          {{ image.url | image_tag:
                            loading: 'lazy',
                            class: 'image-banner__image',
                            widths: '990, 1400, 1900, 2500'
                          }}
                        </div>
                      {%- endif -%}

                      {%- if image_mobile != blank -%}
                        <div class="image-banner__vision-wrapper image-banner__vision-wrapper--mobile{%if show_overlay %} image-banner__vision-wrapper--overlay{%- endif -%}">
                          {{ image_mobile.url | image_tag:
                            loading: 'lazy',
                            class: 'image-banner__image',
                            widths: '320, 480, 567'
                          }}
                        </div>
                      {%- endif -%}
                    {%- endif -%}
                  </div>
            {%- if carousel -%}
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}

    {%- if carousel -%}
        </div>

        {%- if show_navigation -%}
          <div class="carousel__navigation" aria-label="Carousel navigation" aria-hidden="true">
            <span class="carousel__btn prev" title="Prev slide">
              Previous slide
              {%- include 'icon-arrow-right' -%}
            </span>
            <span class="carousel__btn next" title="Next slide">
              Next slide
              {%- include 'icon-arrow-right' -%}
            </span>
          </div>
        {%- endif -%}

        {%- if show_pagination -%}
          <div class="carousel__pagination" aria-label="Carousel pagination" aria-hidden="true">
            {%- for block in blocks limit: limit -%}
              {%- assign first = forloop.first -%}
              {%- assign index = forloop.index -%}

              <span class="carousel__dot{% if first %} active{%- endif -%}" data-index="{{- index -}}" title="Jump to slide {{ index -}}">
                Go to slide {{ index -}}
              </span>
            {%- endfor -%}
          </div>
        {%- endif -%}

        {%- if show_counter -%}
          <div class="carousel__counter">
            {%- for block in blocks limit: limit) -%}
              {%- assign length = forloop.length -%}
            {%- endfor -%}

            <span class="carousel__count">{%- if length < 10 -%}0{%- endif -%}1</span>
            <span class="carousel__divider">|</span>
            <span class="carousel__summary">{%- if length < 10 -%}0{%- endif -%}{{- length -}}</span>
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
{%- endif -%}

<script src="{{ "image-banner.js" | asset_url }}" defer></script>

