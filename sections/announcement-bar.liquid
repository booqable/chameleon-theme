{%- assign hide_bar = section.settings.hide_bar -%}

{%- if hide_bar != true -%}
  {{ "announcement-bar.css" | asset_url | stylesheet_tag }}

  {%- assign icon                  = section.settings.icon -%}
  {%- assign bar_text              = section.settings.bar_text -%}
  {%- assign bar_message           = section.settings.bar_message -%}
  {%- assign bar_menu              = section.settings.bar_menu -%}
  {%- assign color_palette         = section.settings.color_palette -%}
  {%- assign padding_top           = section.settings.padding_top -%}
  {%- assign padding_bottom        = section.settings.padding_bottom -%}
  {%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
  {%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}

  {% comment %} CSS variables start {% endcomment %}
  {%- capture variables -%}
    {%- case padding_top -%}
      {%- when 'small' -%}
        --padding-top: 4px;
      {%- when 'medium' -%}
        --padding-top: 9px;
      {%- when 'large' -%}
        --padding-top: 12px;
    {%- endcase -%}

    {%- case padding_bottom -%}
      {%- when 'small' -%}
        --padding-bottom: 4px;
      {%- when 'medium' -%}
        --padding-bottom: 9px;
      {%- when 'large' -%}
        --padding-bottom: 12px;
    {%- endcase -%}

    {%- case padding_top_mobile -%}
      {%- when 'small' -%}
        --padding-top-mobile: 4px;
      {%- when 'medium' -%}
        --padding-top-mobile: 9px;
      {%- when 'large' -%}
        --padding-top-mobile: 12px;
    {%- endcase -%}

    {%- case padding_bottom_mobile -%}
      {%- when 'small' -%}
        --padding-bottom-mobile: 4px;
      {%- when 'medium' -%}
        --padding-bottom-mobile: 9px;
      {%- when 'large' -%}
        --padding-bottom-mobile: 12px;
    {%- endcase -%}
  {%- endcapture -%}
  {% comment %} CSS variables end {% endcomment %}

  <div
    class="announcement-bar__wrapper{% if color_palette != blank %} palette-{{ color_palette }}{% endif %}{% if padding_top != blank or padding_top_mobile != blank %} announcement-bar__wrapper--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} announcement-bar__wrapper--padding-bottom{%- endif -%}"
    style="{{- variables | escape -}}"
  >
    <div class="announcement-bar__container container">
      <div class="announcement-bar__info">
        {%- render 'icon', icon: icon -%}

        {%- if bar_text != blank -%}
          <span class="announcement-bar__text announcement-bar__message">
            {{- bar_text -}}
          </span>
        {%- endif -%}
      </div>

      <span class="announcement-bar__text">
        {%- if bar_message != blank -%}
          {{- bar_message -}}
        {%- endif -%}
      </span>

      <nav class="announcement-bar__menu">
        {%- if bar_menu != blank -%}
          <ul class="announcement-bar__menu-list">
            {%- for link in bar_menu.items -%}
              {%- if link != blank -%}
                <li class="announcement-bar__menu-item">
                  <a href="{{ link.url }}" class="announcement-bar__menu-link">
                    {{- link.title -}}
                  </a>
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </nav>
    </div>
  </div>
{%- endif -%}

