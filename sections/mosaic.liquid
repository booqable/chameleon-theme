{%- assign blocks = section.blocks -%}

{%- if blocks.size > 0 -%}

  {{ "mosaic.css" | asset_url | stylesheet_tag }}

  {%- assign tag                   = section.settings.tag -%}
  {%- assign title                 = section.settings.title -%}
  {%- assign description           = section.settings.description -%}
  {%- assign title_bg              = section.settings.title_bg -%}
  {%- assign view_all              = section.settings.view_all -%}
  {%- assign view_url              = section.settings.view_url -%}
  {%- assign size                  = section.settings.size -%}
  {%- assign limit                 = section.settings.limit -%}
  {%- assign padding_top           = section.settings.padding_top -%}
  {%- assign padding_bottom        = section.settings.padding_bottom -%}
  {%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
  {%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}
  {%- assign image_placeholder     = settings.image_placeholder -%}

  {% comment %} CSS variables start {% endcomment %}
  {%- capture variables -%}
    {%- case padding_top -%}
      {%- when 'small' -%}
        --padding-top: 50px;
      {%- when 'medium' -%}
        --padding-top: 80px;
      {%- when 'large' -%}
        --padding-top: 112px;
    {%- endcase -%}

    {%- case padding_bottom -%}
      {%- when 'small' -%}
        --padding-bottom: 50px;
      {%- when 'medium' -%}
        --padding-bottom: 80px;
      {%- when 'large' -%}
        --padding-bottom: 112px;
    {%- endcase -%}

    {%- case padding_top_mobile -%}
      {%- when 'small' -%}
        --padding-top-mobile: 24px;
      {%- when 'medium' -%}
        --padding-top-mobile: 48px;
      {%- when 'large' -%}
        --padding-top-mobile: 70px;
    {%- endcase -%}

    {%- case padding_bottom_mobile -%}
      {%- when 'small' -%}
        --padding-bottom-mobile: 24px;
      {%- when 'medium' -%}
        --padding-bottom-mobile: 48px;
      {%- when 'large' -%}
        --padding-bottom-mobile: 70px;
    {%- endcase -%}
  {%- endcapture -%}
  {% comment %} CSS variables end {% endcomment %}

  <div
    class="mosaic__wrapper{% if padding_top != blank or padding_top_mobile != blank %} mosaic__wrapper--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} mosaic__wrapper--padding-bottom{%- endif -%}"
    style="{{- variables | escape -}}"
  >
    <div class="mosaic__container container">
      {%- if tag != blank or title != blank or description != blank or title_bg != blank or view_all != blank -%}
        {%- render 'section-header',
            tag: tag,
            title: title,
            description: description,
            background: title_bg
        -%}
      {%- endif -%}

      <div class="mosaic__list mosaic__list-{{ size }}{% if blocks.size > 3 %} mosaic__list-two-rows{%- endif -%}">
        {%- for block in blocks -%}
          {%- assign article_tag  = block.settings.article_tag -%}
          {%- assign heading      = block.settings.heading -%}
          {%- assign text         = block.settings.text -%}
          {%- assign button       = block.settings.button -%}
          {%- assign button_url   = block.settings.button_url -%}
          {%- assign image        = block.settings.image -%}

          {%- if image != blank -%}
            {%- assign image = image -%}
          {%- elsif image_placeholder != blank -%}
            {%- assign image = image_placeholder -%}
          {%- else -%}
            {%- assign image = blank -%}
          {%- endif -%}

          <div class="mosaic__item" id="{{- block.id -}}">
            <div class="mosaic__item-col{% if image == blank %} no-image{% else %} mosaic__item-col--image{%- endif -%}">
              {%- if image != blank -%}
                {%- render 'image',
                  image: image,
                  loading: 'lazy',
                  class: 'mosaic__image',
                  size: 'm'
                -%}
              {%- endif -%}
            </div>

            <div class="mosaic__item-col">
              <div class="mosaic__text-area">
                {%- if article_tag != blank -%}
                  <span class="mosaic__tag">{{- article_tag -}}</span>
                {%- endif -%}

                {%- if heading != blank -%}
                  <h4 class="mosaic__heading">
                    {{- heading -}}
                  </h4>
                {%- endif -%}

                {%- if text != blank -%}
                  <div class="mosaic__text">{{- text | truncate: 200, " ..."  -}}</div>
                {%- endif -%}

                {%- if button != blank and button_url != blank -%}
                  <a href="{{  button_url }}" class="mosaic__button button button--secondary">
                    {{- button -}}
                    {%- render 'icon-arrow-right' -%}
                  </a>
                {%- endif -%}
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>

      {%- if view_all != blank and view_url != blank -%}
        <div class="mosaic__show-wrapper">
          <a href="{{ view_url }}" class="mosaic__show button button--outlined button--large">
            {{- view_all -}}
          </a>
        </div>
      {%- endif -%}
    </div>
  </div>
{%- endif -%}

