{%- assign blocks = section.blocks -%}

{%- if blocks.size > 0 -%}
  {{ "images.css" | asset_url | stylesheet_tag }}

  {%- assign limit                 = section.settings.limit -%}
  {%- assign height                = section.settings.height -%}
  {%- assign padding_top           = section.settings.padding_top -%}
  {%- assign padding_bottom        = section.settings.padding_bottom -%}
  {%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
  {%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}
  {%- assign ui_color              = section.settings.ui_color -%}
  {%- assign timer                 = section.settings.timer -%}
  {%- assign pause                 = section.settings.pause -%}
  {%- assign effect                = section.settings.effect -%}

  {%- assign carousel = false -%}

  {%- if blocks.size > 1 -%}
    {{ "carousel.css" | asset_url | stylesheet_tag }}

    {%- assign carousel = true -%}
  {%- endif -%}

  {%- assign video_array          = "" -%}

  {%- for block in blocks -%}
    {%- assign full_width         = block.settings.full_width -%}
    {%- assign video_url          = block.settings.video_url | strip -%}
    {%- assign video              = false -%}

    {%- if video_url != blank and full_width -%}
      {%- assign video            = true -%}
      {%- assign video_array      = video_array | append: video -%}
    {%- endif -%}
  {%- endfor -%}

  {% comment %} CSS variables start {% endcomment %}
  {%- capture variables -%}
    {%- if ui_color != blank -%}
      --ui-color: {{ ui_color }};
    {%- endif -%}
    {%- if carousel -%}
      --slide-width: 100%;
      --slide-width-mobile: 100%;
    {%- endif -%}

    {%- case height -%}
      {%- when 'small' -%}
        --height: 500px;
      {%- when 'medium' -%}
        --height: 650px;
      {%- when 'large' -%}
        --height: 800px;
    {%- endcase -%}

    {%- case padding_top -%}
      {%- when 'small' -%}
        --padding-top: 20px;
      {%- when 'medium' -%}
        --padding-top: 35px;
      {%- when 'large' -%}
        --padding-top: 60px;
    {%- endcase -%}

    {%- case padding_bottom -%}
      {%- when 'small' -%}
        --padding-bottom: 20px;
      {%- when 'medium' -%}
        --padding-bottom: 35px;
      {%- when 'large' -%}
        --padding-bottom: 60px;
    {%- endcase -%}

    {%- case padding_top_mobile -%}
      {%- when 'small' -%}
        --padding-top-mobile: 24px;
      {%- when 'medium' -%}
        --padding-top-mobile: 32px;
      {%- when 'large' -%}
        --padding-top-mobile: 41px;
    {%- endcase -%}

    {%- case padding_bottom_mobile -%}
      {%- when 'small' -%}
        --padding-bottom-mobile: 24px;
      {%- when 'medium' -%}
        --padding-bottom-mobile: 32px;
      {%- when 'large' -%}
        --padding-bottom-mobile: 41px;
    {%- endcase -%}
  {%- endcapture -%}
  {% comment %} CSS variables end {% endcomment %}

  <div class="images__wrapper" style="{{- variables | escape -}}">
    {%- if carousel -%}
      <div class="carousel carousel__fluid carousel__{{- effect -}}-effect{% if pause %} carousel__pause{%- endif -%}" aria-label="Gallery">
        <input class="carousel__timer" type="hidden" name="hidden" value="{{- timer -}}">
        <div class="carousel__wrapper">
    {%- endif -%}

          {%- for block in blocks limit: limit -%}
            {%- assign first                = forloop.first -%}
            {%- assign title                = block.settings.title -%}
            {%- assign description          = block.settings.description -%}
            {%- assign button_1             = block.settings.button_1 -%}
            {%- assign button_url_1         = block.settings.button_url_1 -%}
            {%- assign button_2             = block.settings.button_2 -%}
            {%- assign button_url_2         = block.settings.button_url_2 -%}
            {%- assign text_position        = block.settings.text_position -%}
            {%- assign text_position_mobile = block.settings.text_position_mobile -%}
            {%- assign video_url            = block.settings.video_url | strip -%}
            {%- assign image                = block.settings.image -%}
            {%- assign image_mobile         = block.settings.image_mobile -%}
            {%- assign background           = block.settings.background -%}
            {%- assign color                = block.settings.color -%}
            {%- assign title_color          = block.settings.title_color -%}
            {%- assign overlay_opacity      = block.settings.overlay_opacity -%}

            {% comment %} CSS variables start {% endcomment %}
            {%- capture text_variables -%}
              {%- if color != blank -%}
                --color-third-foreground: {{ color }};
              {%- endif -%}
              {%- if title_color != blank -%}
                --title-color: {{ title_color }};
              {%- endif -%}

              {%- case text_position -%}
                {%- when 'top-left' -%}
                  --text-justify-content: flex-start;
                  --text-align-items: flex-start;
                  --text-align: left;
                  --margin-left: 0;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 37px;
                {%- when 'top-center' -%}
                  --text-justify-content: center;
                  --text-align-items: flex-start;
                  --text-align: center;
                  --margin-left: auto;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 0;
                {%- when 'top-right' -%}
                  --text-justify-content: flex-end;
                  --text-align-items: flex-start;
                  --text-align: right;
                  --margin-left: auto;
                  --margin-right: 0;
                  --padding-left: 37px;
                  --padding-right: 0;
                {%- when 'middle-left' -%}
                  --text-justify-content: flex-start;
                  --text-align-items: center;
                  --text-align: left;
                  --margin-left: 0;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 37px;
                {%- when 'center' -%}
                  --text-justify-content: center;
                  --text-align-items: center;
                  --text-align: center;
                  --margin-left: auto;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 0;
                {%- when 'middle-right' -%}
                  --text-justify-content: flex-end;
                  --text-align-items: center;
                  --text-align: right;
                  --margin-left: auto;
                  --margin-right: 0;
                  --padding-left: 37px;
                  --padding-right: 0;
                {%- when 'bottom-left' -%}
                  --text-justify-content: flex-start;
                  --text-align-items: flex-end;
                  --text-align: left;
                  --margin-left: 0;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 37px;
                {%- when 'bottom-center' -%}
                  --text-justify-content: center;
                  --text-align-items: flex-end;
                  --text-align: center;
                  --margin-left: auto;
                  --margin-right: auto;
                  --padding-left: 0;
                  --padding-right: 0;
                {%- when 'bottom-right' -%}
                  --text-justify-content: flex-end;
                  --text-align-items: flex-end;
                  --text-align: right;
                  --margin-left: auto;
                  --margin-right: 0;
                  --padding-left: 37px;
                  --padding-right: 0;
              {%- endcase -%}

              {%- case text_position_mobile -%}
                {%- when 'top-left' -%}
                  --text-justify-content-mobile: flex-start;
                  --text-align-items-mobile: flex-start;
                  --text-align-mobile: left;
                  --margin-left-mobile: 0;
                  --margin-right-mobile: auto;
                {%- when 'top-center' -%}
                  --text-justify-content-mobile: center;
                  --text-align-items-mobile: flex-start;
                  --text-align-mobile: center;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: auto;
                {%- when 'top-right' -%}
                  --text-justify-content-mobile: flex-end;
                  --text-align-items-mobile: flex-start;
                  --text-align-mobile: right;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: 0;
                {%- when 'middle-left' -%}
                  --text-justify-content-mobile: flex-start;
                  --text-align-items-mobile: center;
                  --text-align-mobile: left;
                  --margin-left-mobile: 0;
                  --margin-right-mobile: auto;
                {%- when 'center' -%}
                  --text-justify-content-mobile: center;
                  --text-align-items-mobile: center;
                  --text-align-mobile: center;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: auto;
                {%- when 'middle-right' -%}
                  --text-justify-content-mobile: flex-end;
                  --text-align-items-mobile: center;
                  --text-align-mobile: right;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: 0;
                {%- when 'bottom-left' -%}
                  --text-justify-content-mobile: flex-start;
                  --text-align-items-mobile: flex-end;
                  --text-align-mobile: left;
                  --margin-left-mobile: 0;
                  --margin-right-mobile: auto;
                {%- when 'bottom-center' -%}
                  --text-justify-content-mobile: center;
                  --text-align-items-mobile: flex-end;
                  --text-align-mobile: center;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: auto;
                {%- when 'bottom-right' -%}
                  --text-justify-content-mobile: flex-end;
                  --text-align-items-mobile: flex-end;
                  --text-align-mobile: right;
                  --margin-left-mobile: auto;
                  --margin-right-mobile: 0;
              {%- endcase -%}
            {%- endcapture -%}

            {%- capture image_variables -%}
              {%- if background != blank -%}
                --color-primary-foreground: {{ background }};
                --color-primary-foreground-rgb: {{ background }}00;
                --color-primary-foreground-rgb-45: {{ background }}73;
              {%- endif -%}
              {%- if overlay_opacity != blank -%}
                --opacity-overlay: {{ overlay_opacity }}%;
              {%- endif -%}
            {%- endcapture -%}
            {% comment %} CSS variables end {% endcomment %}

            {%- if carousel -%}
              <div class="carousel__item{% if video_array.size > 0 %} images__video-wrapper{% endif %}{% if effect == 'fade' and first == false %} hide{% endif %}{% if effect == 'fade' and first %} show{%- endif -%}">
                <div class="carousel__inner">
            {%- endif -%}
                  {%- if video and carousel == false -%}
                    <div class="images__video-wrapper">
                  {%- endif -%}
                    <div
                      class="images__container container{% if padding_top != blank or padding_top_mobile != blank %} images__container--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} images__container--padding-bottom{%  endif %}"
                      style="{{- text_variables | escape -}}"
                    >
                      <div class="images__text-area">
                        <div class="images__content">
                          {%- if title != blank -%}
                            <h1 class="images__title">{{- title -}}</h1>
                          {%- endif -%}

                          {%- if description != blank -%}
                            <div class="images__description text-medium">{{- description | truncate: 150, " ..." -}}</div>
                          {%- endif -%}

                          {%- if button_1 != blank or button_2 != blank -%}
                            <div class="images__buttons">
                              {%- if button_1 != blank and button_url_1 != blank -%}
                                <a href="{{  button_url_1 }}" class="images__button button button--primary button--large">{{- button_1 -}}</a>
                              {%- endif -%}

                              {%- if button_2 != blank and button_url_2 != blank -%}
                                <a href="{{  button_url_2 }}" class="images__button button button--outlined button--large">{{- button_2 -}}</a>
                              {%- endif -%}
                            </div>
                          {%- endif -%}

                        </div>
                      </div>
                    </div>

                    <div class="images__vision" style="{{- image_variables | escape -}}">
                      {%- if video_url contains "youtube.com" -%}
                        {%- assign video_drop = video_url | split: "?v=" -%}
                        {%- assign video_id   = video_drop | last | strip -%}

                        <div class="images__vision-wrapper images__vision-wrapper--overlay">
                          <input id="video-{{- block.id -}}" value="{{- video_id -}}" class="images__video-id" type="hidden" name="hidden">
                          <div id="player-{{- block.id -}}" class="images__video"></div>
                        </div>

                      {%- elsif video_url contains "vimeo.com" -%}
                        {%- assign video_drop = video_url | split: "/" -%}
                        {%- assign video_id   = video_drop | last | strip -%}

                        <div class="images__vision-wrapper images__vision-wrapper--overlay">
                          <iframe
                            class="images__video"
                            src="https://player.vimeo.com/video/{{- video_id -}}?autoplay=1&muted=1&loop=1&autopause=0&controls=0&background=1"
                            width="988"
                            height="556"
                            frameborder="0"
                            allow="autoplay; fullscreen"
                            allowfullscreen
                            autoplay
                            muted
                            loop
                          ></iframe>
                        </div>

                      {%- elsif image != blank or image_mobile != blank -%}
                        {%- if image != blank -%}
                          <div class="images__vision-wrapper{% if image_mobile != blank %} images__vision-wrapper--desktop{% endif %} images__vision-wrapper--overlay">
                            {%- render 'image',
                              image: image,
                              loading: 'lazy',
                              class: 'images__image',
                              size: 'xxl'
                            -%}
                          </div>
                        {%- endif -%}

                        {%- if image_mobile != blank -%}
                          <div class="images__vision-wrapper images__vision-wrapper--mobile images__vision-wrapper--overlay">
                            {%- render 'image',
                              image: image,
                              loading: 'lazy',
                              class: 'images__image',
                              size: 'm'
                            -%}
                          </div>
                        {%- endif -%}
                      {%- endif -%}
                    </div>
                  {%- if video and carousel == false -%}
                    </div>
                  {%- endif -%}

            {%- if carousel -%}
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}

    {%- if carousel -%}
        </div>

        <div class="carousel__navigation" aria-label="Carousel navigation" aria-hidden="true">
          <span class="carousel__btn prev" title="Prev slide">
            Previous slide
            {%- render 'icon-arrow-right' -%}
          </span>
          <span class="carousel__btn next" title="Next slide">
            Next slide
            {%- render 'icon-arrow-right' -%}
          </span>
        </div>

        <div class="carousel__pagination" aria-label="Carousel pagination" aria-hidden="true">
          {%- for block in blocks limit: limit -%}
            {%- assign first = forloop.first -%}
            {%- assign index = forloop.index -%}

            <span class="carousel__dot{% if first %} active{%- endif -%}" data-index="{{- index -}}" title="Jump to slide {{ index -}}">
              Go to slide {{ index -}}
            </span>
          {%- endfor -%}
        </div>

        <div class="carousel__counter">
          {%- for block in blocks limit: limit) -%}
            {%- assign length = forloop.length -%}
          {%- endfor -%}

          <span class="carousel__count">{%- if length < 10 -%}0{%- endif -%}1</span>
          <span class="carousel__divider">|</span>
          <span class="carousel__summary">{%- if length < 10 -%}0{%- endif -%}{{- length -}}</span>
        </div>
      </div>
    {%- endif -%}
  </div>
{%- endif -%}

<script src="{{ "images.js" | asset_url }}" defer></script>

