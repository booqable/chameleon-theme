{{ "cta.css" | asset_url | stylesheet_tag }}

{%- assign title                 = section.settings.title -%}
{%- assign description           = section.settings.description -%}
{%- assign button_1              = section.settings.button_1 -%}
{%- assign button_url_1          = section.settings.button_url_1 -%}
{%- assign button_2              = section.settings.button_2 -%}
{%- assign button_url_2          = section.settings.button_url_2 -%}
{%- assign image                 = section.settings.image -%}
{%- assign background            = section.settings.background -%}
{%- assign color                 = section.settings.color -%}
{%- assign ui_color              = section.settings.ui_color -%}
{%- assign padding_top           = section.settings.padding_top -%}
{%- assign padding_bottom        = section.settings.padding_bottom -%}
{%- assign padding_top_mobile    = section.settings.padding_top_mobile -%}
{%- assign padding_bottom_mobile = section.settings.padding_bottom_mobile -%}

{% comment %} CSS variables start {% endcomment %}
{%- capture variables -%}
  {%- if background != blank -%}
    --color-accent-background: {{ background }};
    --color-accent-background-rgb: {{ background | append: "00" }};
  {%- endif -%}
  {%- if color != blank -%}
    --color-primary-background: {{ color }};
    --color-primary-background-hover: {{ color | append: "52" }};
    --color-primary-background-active: {{ color | append: "8F" }};
  {%- endif -%}
  {%- if ui_color != blank -%}
    --color-primary-foreground: {{ ui_color }};
  {%- endif -%}

  {%- case padding_top -%}
      {%- when 'small' -%}
        --padding-top: 50px;
      {%- when 'medium' -%}
        --padding-top: 80px;
      {%- when 'large' -%}
        --padding-top: 112px;
    {%- endcase -%}

    {%- case padding_bottom -%}
      {%- when 'small' -%}
        --padding-bottom: 50px;
      {%- when 'medium' -%}
        --padding-bottom: 80px;
      {%- when 'large' -%}
        --padding-bottom: 112px;
    {%- endcase -%}

    {%- case padding_top_mobile -%}
      {%- when 'small' -%}
        --padding-top-mobile: 24px;
      {%- when 'medium' -%}
        --padding-top-mobile: 56px;
      {%- when 'large' -%}
        --padding-top-mobile: 90px;
    {%- endcase -%}

    {%- case padding_bottom_mobile -%}
      {%- when 'small' -%}
        --padding-bottom-mobile: 24px;
      {%- when 'medium' -%}
        --padding-bottom-mobile: 56px;
      {%- when 'large' -%}
        --padding-bottom-mobile: 90px;
    {%- endcase -%}
{%- endcapture -%}
{% comment %} CSS variables end {% endcomment %}

<div
  class="cta__wrapper{% if padding_top != blank or padding_top_mobile != blank %} cta__wrapper--padding-top{% endif %}{% if padding_bottom != blank or padding_bottom_mobile != blank %} cta__wrapper--padding-bottom{%- endif -%}"
  style="{{- variables | escape -}}"
>
  <div class="cta__container container">
    {%- if title != blank or description != blank or button_1 != blank or button_2 != blank -%}
      {%- render 'section-header-narrow',
        title: title,
        text: description,
        btn_primary: button_1,
        btn_primary_url: button_url_1,
        btn_outline: button_2,
        btn_outline_url: button_url_2
      -%}
    {%- endif -%}
  </div>

  {%- if image != blank -%}
    <div class="cta__image-wrapper">
      {%- render 'image',
        image: image,
        loading: 'lazy',
        class: 'cta__image',
        size: 'xxl'
      -%}
    </div>
  {%- else -%}
    <div class="cta__image-wrapper">
      {%- render 'image-background-web' -%}
    </div>
  {%- endif -%}
</div>

